@using ContactPage.Models;
@model AddViewModel;

@{
    ViewData["Title"] = "Contact Tracking System - Add";
}
<h1>@ViewData["Title"]</h1>

<div class="search-page">
    <div class="row">
        <div class="col-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please enter new contact details</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="Add">
                        <fieldset>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-6">
                                        <label asp-for="FirstName">First Name</label>
                                        <input type="text" class="form-control" asp-for="FirstName" autofocus required />
                                    </div>
                                    <div class="col-6">
                                        <label asp-for="LastName">Last Name</label>
                                        <input type="text" class="form-control" asp-for="LastName" autocomplete="off" required />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-6">
                                        <label asp-for="EmailAddress">Email</label>
                                        <input class="form-control" type="email" asp-for="EmailAddress" placeholder="john.doe@example.com" required />
                                    </div>
                                    <div class="col-3">
                                        <label asp-for="PhoneNumber">Phone Number</label>
                                        <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="000-000-0000" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" maxlength="12" required onkeyup="handlePhone(event)" />
                                    </div>
                                    <div class="col-3">
                                        <label asp-for="ZipCode">Residential Zip Code</label>
                                        <input type="text" class="form-control" asp-for="ZipCode" autocomplete="off" placeholder="000000" pattern="[0-9]{5}" maxlength="5" required />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group pt-3">
                                <button class="btn btn-primary">Add</button>
                                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </fieldset>

                        @Html.ValidationMessage("Error")
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>